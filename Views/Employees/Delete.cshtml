@model WebApp.BL.Models.EmployeesVM

@section Search
{

    <form class="form-inline my-2 my-lg-0 mr-lg-2">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </form>
}

<div class="d-flex flex-column  align-items-center justify-content-center">
    <h2 class="my-3 my-sm-5">Delete employee</h2>
    <form class="form-group w-75" asp-action="Delete" asp-controller="Employees">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Id" disabled class="form-control ">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label font-weight-bold">Password</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Age" class="col-sm-2 col-form-label font-weight-bold">Age</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Age" disabled class="form-control ">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label font-weight-bold">Email</label>
            <div class="col-sm-10">
                <input type="email" asp-for="Email" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label font-weight-bold">Address</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Address" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Districts.Name" class="col-sm-2 col-form-label font-weight-bold">District</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Districts.Name" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Salary" class="col-sm-2 col-form-label font-weight-bold">Salary</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Salary" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DateOfHire" class="col-sm-2 col-form-label font-weight-bold">Hiring date</label>
            <div class="col-sm-10">
                <input type="date" asp-for="DateOfHire" disabled class="form-control ">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department.DepartmentName" class="col-sm-2 col-form-label font-weight-bold">Department</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Department.DepartmentName" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Notes" class="col-sm-2 col-form-label font-weight-bold">Notes</label>
            <div class="col-sm-10">
                <textarea type="text" asp-for="Notes" disabled class="form-control"></textarea>
            </div>
        </div>


        <div class="form-group row">
            <label class="col-sm-2 font-weight-bold">Active Status</label>
            <div class="col-sm-10">
                <div class="form-check">
                    <label class="custom-control custom-checkbox" asp-for="IsActive">
                        <input class="custom-control-input" type="checkbox" disabled asp-for="IsActive">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Active</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="float-right">
            <button type="button" data-toggle="modal" data-target="#exampleModal1" class="btn btn-danger">Delete</button>
            <button asp-action="Index" asp-controller="Employees" class="btn btn-primary">Back To Departments</button>
        </div>






        <!-- Modal -->

        <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <p>
                            You want to delete employee.<br />
                            Are you sure?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>



