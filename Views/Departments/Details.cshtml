@model WebApp.BL.Models.DepartmentsVM
@section Search
{

    <form class="form-inline my-2 my-lg-0 mr-lg-2">
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </form>
}


<div class="d-flex flex-column  align-items-center">
    <h2 class="my-3 my-sm-5">Department details</h2>
    <form class="form-group w-75 ">


        <div class="form-group row">
            <label asp-for="DepartmentName" class="col-sm-2 col-form-label font-weight-bold">Department name</label>
            <div class="col-sm-10">
                <input type="text" asp-for="DepartmentName" disabled class="form-control ">
                <div class=" text-danger mt-2">

                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DepartmentCode" class="col-sm-2 col-form-label font-weight-bold">Department code</label>
            <div class="col-sm-10">
                <input type="text" asp-for="DepartmentCode" disabled class="form-control ">
                <div class=" text-danger mt-2">

                </div>
            </div>
        </div>



        <button asp-action="Edit" asp-controller="Departments" asp-route-id="@Model.Id" class="btn btn-warning text-white form-control mb-3">Edit</button>
        <button asp-action="Delete" asp-controller="Departments" asp-route-id="@Model.Id" class="btn btn-danger text-white form-control mb-3">Delete</button>
        <button asp-action="Index" asp-controller="Departments" class="btn btn-primary form-control mb-3">Back To Departments</button>


    </form>
</div>












